<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.emili.application1.Profil2Activity">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/chat_groupe"
        android:layout_width="fill_parent"
        android:layout_height="465dp"/>

    <ImageView
        android:id="@+id/image_button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/common_google_signin_btn_icon_dark_focused"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:adjustViewBounds="true"/>

    <EditText
        android:id="@+id/message_chat"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="80dp"
        android:textAppearance="?android:attr/textAppearance"
        />

    <Button
        android:id="@+id/envoyer_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="envoyer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:enabled="false"/>


</android.support.constraint.ConstraintLayout>
